/*
This tests block comments
This is the basic language for tests. Goal is to check at least
one of each operator and the corresponding rule types, and precedence
*/

// check export, also a test for line comments
export = testlang
// check imports
import = testlangparser

testlang:
    choice*         // tests '*' operator, repeat rule

fourletterword:
    "[a-zA-Z]{4}"   // basic regex test

x_word:             // test string literal
    'xxxx'

triplet(check_triplet):     // check transformation
    fourletterword

token:
    fourletterword  // tokenizer tests

choice:             // checks choice rule
      sequence
    | list
    | nlook
    | plook
    | (repeat_6plus | repeat_5 | repeat_3_4 | repeat_1plus | repeat_opt) // test '(', ')'

sequence:
    triplet, fourletterword, triplet

list:               // check list rule
    x_word.triplet  // check '.' operator

repeat_opt:
    triplet?

repeat_5:
    triplet{5,5}

repeat_6plus:
    triplet{6,}

repeat_3_4:
    triplet{3,4}

repeat_1plus:
    triplet+

plook:
    x_word, &triplet

nlook:
    x_word, !triplet
